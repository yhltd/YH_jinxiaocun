page{
  height: 100%;
}

view {
  font-size: 28rpx;
}

button{
  font-size: 30rpx;
}
  

.table{
  display: inline-flex;
  flex-direction: column;
}

.sv_list{
  width: auto;
  white-space: nowrap;
  margin-top: 0px;
  height: 80%;
  background-color: #f2f2f2;  
}

::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: rgba(155, 153, 153, 0.589);
}

.table_header {
  display: inline-flex;
  z-index: 6;
  height: 100rpx;
  position: sticky;
  top: 0;
}

.title{
  height: 100%;
  margin-right: 23rpx;
  display: inline-block;
  margin-left: 10px;
}

.title_text{
  display: flex;
  width: 100%;
  border-right: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  background-color: #009688;
  color: white;
  font-weight: bold;
  font-size: 35rpx;  
}

.list_row{
  display: inline-flex;
  flex-direction: row;
}

.table_main{
  display: inline-flex;
  height: 7%;
}
.table_main_bottom{
  height: 10%;
  display: flex;
  border-bottom: 1rpx solid #E6E6E6;
  font-size: 32rpx;
  padding-left: 20rpx;
  font-weight: bold;  
  flex-direction: column;
  justify-content: center;
}
.table_main_bottom_text{
  display: flex;
  align-items: center;
}

.list_view{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 70rpx;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: black;
  border-right: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
  line-height: 70rpx;  
}
.list_view_fixed{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 70rpx;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: black;
  border-right: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
  line-height: 70rpx;  
  position:sticky;
  left:0;
  z-index:5;
}


/*
  bottom_view
*/
.bottom_view{
  height: 10%;
  align-items: center;
  display: flex;
}
.bt_bottom{
  width: 45%;
  background-color: #282B33;
  color: #E6E6E6;
  height: 75rpx;
  margin: auto;
}
.bt_bottom_hover{
  width: 45%;
  background-color: #2D2D2D;
  color: #E6E6E6;
  height: 75rpx;
  margin: auto;
}

/*
  moreDo
*/
.moreDo_view{
  position: fixed;
  height: 96%;
  width: 45%;
  top: 2%;
  background-color: white;
  z-index: 20;
  border-radius: 0 10rpx 10rpx 0;
  box-shadow: 10rpx 10rpx 10rpx black;  
}
.moreDo_view_bt{
  width: 90%;
  height: 100rpx;
  background-color: #009688;
  color: white;
  font-size: 37rpx;
  margin-top: 45rpx;
  line-height: 100rpx;  
}



/*
  mask
*/
.mask{
  visibility: visible;
  opacity: 1;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 19;
  transition: all 0.3s ease-in-out;
}