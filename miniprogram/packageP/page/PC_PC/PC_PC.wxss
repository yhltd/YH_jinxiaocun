/* packageP/page/PC/PC.wxss */
page {
  height: 100%;
  background: #f5f5f5;
}

view {
  font-size: 28rpx;
}

button {
  font-size: 30rpx;
}

.sv_list {
  width: auto;
  white-space: nowrap;
  margin-top: 0px;
  height: 88%;
  background-image: url('https://7968-yhltd-hsxl2-1259412419.tcb.qcloud.la/caiwu3.png?sign=6a8a025631c6c2b803098f8aa20bc8c8&t=1760000876');
  background-repeat: no-repeat;
  background-size: cover;
}

::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: rgba(155, 153, 153, 0.589);
}

/* ========== 表格样式修复 ========== */
.table {
  display: inline-flex;
  flex-direction: column;
  margin: 0 20rpx;
}

/* 表头行 - 固定高度和布局 */
.table_header {
  display: inline-flex;
  z-index: 6;
  height: 80rpx; /* 固定高度 */
  position: sticky;
  top: 0;
  align-items: stretch; /* 确保所有单元格高度一致 */
}

.title {
  height: 100%;
  display: inline-flex;
  align-items: center;
}

/* 表头单元格 - 固定高度和对齐 */
.title_text {
  display: flex;
  width: 100%;
  height: 80rpx; /* 固定高度 */
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #5a7592 0%, #3a4a6c 100%);
  color: white;
  font-weight: bold;
  font-size: 32rpx;
  text-align: center;
  padding: 0;
  box-sizing: border-box;
}

/* 表格行 */
.list_row {
  display: inline-flex;
  flex-direction: row;
  height: 80rpx; /* 固定行高 */
  align-items: stretch;
}

.table_main {
  display: inline-flex;
  height: 80rpx; /* 固定高度 */
  align-items: stretch;
}

/* 单元格统一高度和对齐 */
.list_view {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 80rpx; /* 固定高度 */
  justify-content: center;
  align-items: center;
  background-color: white;
  color: black;
  border-right: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6;
  box-sizing: border-box;
  padding: 0 5rpx;
}

.list_view_fixed {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 80rpx; /* 固定高度 */
  justify-content: center;
  align-items: center;
  background-color: white;
  color: black;
  border-right: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6;
  position: sticky;
  left: 0;
  z-index: 5;
  box-sizing: border-box;
}

/* 奇偶行背景色 */
.list_view:nth-child(even) {
  background: rgba(240, 248, 255, 0.8) !important;
}

.list_view:nth-child(odd) {
  background: rgba(255, 255, 255, 0.95) !important;
}

/* 单元格文字 */
.list_text {
  color: #333;
  font-weight: normal;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
  box-sizing: border-box;
}

/* ========== 分页样式修复 ========== */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
  height: 100rpx;
  background: linear-gradient(135deg, #e8f4f8 0%, #d4e8f2 100%);
  border-radius: 8rpx;
  margin: 20rpx;
  gap: 30rpx; /* 添加间距 */
}

/* 页码选择器 */
.pagination .input_text_form_small {
  border: 1rpx solid #5a7592;
  background: white;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #5a7592;
  padding: 0 20rpx;
}

/* 页码信息 */
.page-info {
  color: #5a7592;
  font-size: 32rpx;
  font-weight: bold;
  min-width: 120rpx;
  text-align: center;
  line-height: 60rpx;
}

/* 分页按钮 */
.pagination .bt_bottom {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0;
  font-size: 28rpx;
  background: linear-gradient(135deg, #5a7592 0%, #3a4a6c 100%);
}

.pagination .bt_bottom[disabled] {
  opacity: 0.5;
}

/* ========== 查询区域样式 ========== */
.query-header {
  background: linear-gradient(135deg, #5a7592 0%, #3a4a6c 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
  color: white;
}

.query-form {
  padding: 20rpx;
}

.form-row {
  margin-bottom: 20rpx;
}

.picker-value {
  color: #333;
  font-size: 28rpx;
}

.order-info {
  font-size: 24rpx;
  color: #ffffff;
  margin-top: 10rpx;
  opacity: 0.8;
}

/* ========== 底部按钮 ========== */
.bottom_view {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #e8f4f8 0%, #d4e8f2 100%);
  padding: 0 20rpx;
  gap: 20rpx;
}

.bt_bottom {
  flex: 1;
  height: 70rpx;
  background: linear-gradient(135deg, #5a7592 0%, #3a4a6c 100%);
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 160rpx;
  margin: 0;
}

.bt_bottom_hover {
  background: linear-gradient(135deg, #637e9b 0%, #42527a 100%);
}

.bt_bottom[disabled] {
  opacity: 0.5;
}

/* ========== 输入框样式 ========== */
.input_text_form {
  border: 2rpx solid #5a7592;
  background: white;
  width: 80%;
  height: 70rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.input_text_form_small {
  border: 2rpx solid #5a7592;
  background: white;
  width: 160rpx;
  height: 60rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  box-sizing: border-box;
}

/* ========== 其他样式 ========== */
.lables {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin: 30rpx 20rpx 10rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 19;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  background: white;
  padding: 60rpx;
  border-radius: 16rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #5a7592;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 排产结果表格 */
.result-scroll {
  overflow-x: auto;
  max-height: 400rpx;
  margin: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

/* 借鉴排班页面的picker样式 */
.pick {
  position: relative;
  width: 100%;
}

/* 让picker覆盖在input上面 */
.picker {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 10;
}

/* input设置为disabled样式 */
.input_text_form[disabled] {
  color: #333;
  background-color: #fff;
  opacity: 1;
}

/* 确保input有足够的点击区域 */
.input_text_form {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}