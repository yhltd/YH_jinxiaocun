
<!--packageP/page/PC_RenYuanXinXi/PC_RenYuanXinXi.wxml-->
<scroll-view class="sv_list" scroll-x="true" scroll-y="true" style="height:88%">
  <view class="table">
    <view class='table_header'>
      <block class="title" wx:for="{{title}}">
        <view class="title_text" style="width:{{item.width}};{{item.text==''?'position:sticky;left:0;z-index:5':''}}">{{item.text}}</view>
      </block>
    </view>
    <block class="list_row" wx:for="{{list}}" wx:for-item="list_item" wx:for-index="i" wx:key="id">
      <view class="table_main">
        <view wx:for="{{title}}" 
              wx:for-item="item" 
              wx:key="item"
              class="list_view" 
              style="width:{{item.width}}" data-index="{{i}}" 
              data-column="{{item.columnName}}" 
              data-value="{{list_item[item.columnName]}}" 
              data-input_type="{{item.type}}"
              data-isupd="{{item.isupd}}"
              bindtap="clickView">
              <view class="list_text">
  {{item.columnName == 'rownum' ? i+1 : (list_item[item.columnName] || '')}}
</view>
        </view>
      </view>
    </block>
  </view>
</scroll-view>

<!------------------------->
<!---------查询弹窗--------->
<!------------------------->
<van-popup bind:click-overlay="qxShow" show="{{ cxShow }}" position="bottom" custom-style="height: 60%;" >
	<view class="lables">姓名</view>
    <input bindinput="onInput3" data-column="name" class="input_text_form" value="{{name}}" type="text" name="name" ></input>
    <view class="lables">班次</view>
    <input bindinput="onInput3" data-column="banci" class="input_text_form"  value="{{banci}}" type="text" name="banci"></input>
    <!-- 新增查询条件 -->
    <view class="lables">生产线</view>
    <input bindinput="onInput3" data-column="scx_search" class="input_text_form" value="{{scx_search}}" type="text" name="scx_search"></input>
    <view class="lables">工序</view>
    <input bindinput="onInput3" data-column="gx_search" class="input_text_form" value="{{gx_search}}" type="text" name="gx_search"></input>
    
  <!-- 查询弹窗修改 -->
  <view class="bottom_view" >
    <button class="bt_bottom" hover-class="bt_bottom_hover" bindtap="qxShow">取消</button>
    <button class="bt_bottom" hover-class="bt_bottom_hover" bindtap="sel1">查询</button>
  </view>
</van-popup>

