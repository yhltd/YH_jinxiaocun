}

.item {
  width: 67%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 180rpx;
  margin-bottom: 30rpx;
  padding: 0 44rpx;
  background: linear-gradient(135deg, #177fda 30%, #00f2fe 100%);
  
  box-shadow: 
    0 15rpx 35rpx rgba(23, 127, 218, 0.4),
    0 5rpx 15rpx rgba(0, 242, 254, 0.3),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.4),
    inset 0 -6rpx 12rpx rgba(0, 0, 0, 0.2);

  clip-path: polygon(
    0 25%,
    15% 0,
    85% 0,
    100% 25%,
    85% 100%,
    15% 100%
  );
  
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  animation: cardFloat 4s ease-in-out infinite;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  overflow: hidden;
  
  /* 使用outline创建外边框 */
  outline: 4rpx solid rgba(255, 255, 255, 0.8);
  outline-offset: -2rpx;
}


/* 背景流光效果 - 不影响文字 */
.item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 60%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent,
    rgba(255, 255, 255, 0.15),
    rgba(255, 255, 255, 0.25),
    rgba(255, 255, 255, 0.15),
    transparent
  );
  animation: backgroundFlow 6s ease-in-out infinite;
  z-index: 1;
  pointer-events: none;
}

@keyframes backgroundFlow {
  0% {
    left: -100%;
  }
  100% {
    left: 200%;
  }
}

