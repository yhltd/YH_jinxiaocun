<van-popup bind:click-overlay="qxShow" show="{{ xgShow }}" position="bottom" custom-style="height: 35%;">
  <view class="lables">{{update_name[this_column]}}</view>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{xiala_panduan==1?cxdk_list:xiala_panduan==2?ddxh_list:xiala_panduan==3?lcys_list:xiala_panduan==4?gy_list:xiala_panduan==5?dy_list:xiala_panduan==6?kg_list:xiala_panduan==7?pj_list:xiala_panduan==8?fk_list:xiala_panduan==9?hd_list:xiala_panduan==10?xiangmu_leibie_list:''}}" disabled="{{xiala_panduan==0}}"> 
    <input class="input_text_form" type="{{this_type}}" bindinput="onInput" value="{{this_value}}" data-column="this_value" name="this_value" disabled="{{xiala_panduan==0?false:true}}"></input>
  </picker>
  <view class="bottom_view" style="height:10%">
