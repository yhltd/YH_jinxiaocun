<view class="table">
  <view class="tr bg-w">
    <view class="th">序号</view>
    <view class="th">姓名</view>
    <view class="th ">职务</view>
    <view class="th ">入职日期</view>
    <view class="th ">薪资</view>
  </view>
  <block wx:for="{{list}}" wx:key="{{id}}">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.id}}</view>
      <view class="td">{{item.B}}</view>
      <view class="td">{{item.C}}</view>
      <view class="td">{{item.F}}</view>
      <view class="td">{{item.G}}</view>
    </view>
    <view class="tr" wx:else>
      <view class="td">{{item.id}}</view>
      <view class="td">{{item.B}}</view>
      <view class="td">{{item.C}}</view>
      <view class="td">{{item.F}}</view>
      <view class="td">{{item.G}}</view>
    </view>
  </block>
</view>