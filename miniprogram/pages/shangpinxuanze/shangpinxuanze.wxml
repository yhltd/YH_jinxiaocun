        </view>
        <view class='shangpin-jin'   >
         <text class="sp_dm" data-id="{{i}}" >商品代码:{{all[i].sp_dm}}</text>
            <view class='shangpin-input'  data-id="{{i}}" >数量：{{sl[i]}}</view>
            <view class='shangpin-input' data-id="{{i}}">价格：{{jg[i]}}</view>  
        </view>
        </view>
    </view>
</view>
