<view class='header'><view class='pm'></view><input class='bk_ss'style="" bindblur='' value=""    bindconfirm="xixi" placeholder="搜索" placeholder-style="color:#f8f8f8;padding-left:40%;z-index: 0"></input></view>
<view class = "Mymain">
    <view class ="list" wx:for="{{all}}" wx:key=""  wx:for-index='i' >  
   
        <view class='divline'></view>
        <view bindtap='srJg'  data-id="{{i}}" >
        <view class='shangpin'  data-id="{{i}}">
            <image  src='{{all[i].mark1}}' class='shangpin-image'data-id="{{i}}"> </image>
