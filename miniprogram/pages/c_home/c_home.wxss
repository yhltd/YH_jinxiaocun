  height: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  white-space: nowrap;
  animation: marquee 15s linear infinite;
  /* 硬件加速优化 */
  transform: translate3d(0, 0, 0);
  will-change: transform;
}

/* 分隔符样式 */
.marquee-text::before {
  content: "●";
  margin: 0 40rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 20rpx;
}

@keyframes marquee {
  0% {
    transform: translate3d(100%, 0, 0);
  }
  100% {
    transform: translate3d(-100%, 0, 0);
  }
}