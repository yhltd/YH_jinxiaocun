page{
  height: 100%;
  display: flex;
  align-items: center;
}
.list{
  height: 95%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-around;  
}
.item{
  width: 73%;
  height: 12%;
  display: flex;
  align-items: center;
  background-color: #282B33;
  border-radius: 0 10px 10px 0;
  font-size: 39rpx;
  font-weight: bold;
  color: white;
  padding-left: 30px;  
  justify-content: space-between;
  box-shadow: 10rpx 10rpx 20rpx black;
}
.item_hover{
  width: 73%;
  height: 12%;
  display: flex;
  align-items: center;
  background-color: #009688;
  border-radius: 0 10px 10px 0;
  font-size: 39rpx;
  font-weight: bold;
  color: white;
  padding-left: 30px;  
  justify-content: space-between;
  box-shadow: 10rpx 10rpx 20rpx black;
}
.img{
  width: 30px;
  height: 30px;
  margin-right: 5%;
}