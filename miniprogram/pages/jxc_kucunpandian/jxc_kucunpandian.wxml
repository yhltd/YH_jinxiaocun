<import src="/pages/template/xiugai.wxml" />
<template is="xiugai" data="{{xiugai,hidden1,szzh,cpsljg}}" />

<view class='header'>
  <!-- <view class="dq_y">查询</view>
  <view class='pm'></view>  -->
  <!-- <picker class="pick" mode="date" value="{{date}}" data-column_name="start_date" bindchange="choiceDate">
    <input class='bk_ss' type="text" bindinput="onInput" data-column="start_date" value="{{start_date}}" name="start_date" disabled="disabled" style="color:#f8f8f8;text-align:center;" placeholder="请输入开始日期" placeholder-style="color:#f8f8f8;text-align:center;z-index: 0"></input>
  </picker> -->
  <picker class="pick" mode="date" value="{{date}}" data-column_name="stop_date" bindchange="choiceDate">
    <input class='bk_ss' type="text" bindinput="onInput" data-column="stop_date" value="{{stop_date}}" name="stop_date" disabled="disabled" style="color:#f8f8f8;text-align:center;" placeholder="请选择盘库日期" placeholder-style="color:#f8f8f8;text-align:center;z-index: 0"></input>
  </picker>
  <picker class="pick"   value="{{wareHouse}}" data-column_name="wareHouse" range="{{warehouseOptions}}"   bindchange="choicewareHouse">
    <input class='bk_ss2' type="text" data-column="wareHouse" value="{{wareHouse}}" name="wareHouse" disabled="disabled" style="color:#f8f8f8;text-align:center;" placeholder="请选择仓库" placeholder-style="color:#f8f8f8;text-align:center;z-index: 0"></input>
  </picker>
 

  <input class='bk_ss3' type="text" bindinput="onInput2" data-column="product_number" value="{{product_number}}" name="product_number"  style="color:#f8f8f8;text-align:center;" placeholder="请输入商品代码" placeholder-style="color:#f8f8f8;text-align:center;z-index: 0"></input>
  <button class="button_css" bindtap="pankui_churuku">盘平出入库</button>
  <button class="button_css2" bindtap="sel1">查询</button>
  <!-- <button class="button_css3" bindtap="getExcel">导出</button> -->
  <picker bindchange="bindPickerChange" value="{{index}}" data-column_name="product_name" range="{{product_list}}"> 
     <input bindinput="onInput" data-column="product_name" value="{{product_name}}" name="product_name" disabled="disabled" class='bk_ss4' type="text" confirm-type="search" style="color:#f8f8f8;text-align:center;" placeholder="搜索商品名称" placeholder-style="color:#f8f8f8;:text-align:center;z-index: 0"></input>
  </picker>
  
  <button class="button_css3" bindtap="goto_print">打印</button>
</view>
<view class='main'>
  <!-- <view class='list_ps2' wx:for="{{szzhi}}" wx:key="" wx:for-index='i' data-id="{{i}}" bindlongpress="shanchu" bindtap='xiugai'> -->
   <view class='list_ps2' wx:for="{{szzhi}}" wx:key="" wx:for-index='i' data-id="{{i}}" bindlongpress="" bindtap=''>
    <view class='shangpin'>

      <text class='shangpin-text' data-id="{{i}}"><text class="shangpinpm"></text>商品代码：{{szzhi[i].sp_dm}}\n商品名称：{{szzhi[i].cpname}}\n类别：{{szzhi[i].cplb}}</text>
      <text class='shangpin-text' data-id="{{i}}"><text class="shangpinpm"></text>库存数量：{{szzhi[i].ruku_num}}\n</text>
      <text class='shangpin-text' data-id="{{i}}"><text class="shangpinpm"></text>所属仓库：{{szzhi[i].cangku}}\n盘亏数量：{{pankuData[i].pankui_num}}</text>
      <input class="pksl" data-id="{{i}}" type="text" bindinput="onInput" data-column="panku_num" value="{{panku_num}}" name="panku_num"  style="color:#f8f8f8;text-align:center;" placeholder="请输入盘库数量" placeholder-style="color:#f8f8f8;text-align:center;z-index: 0"></input>
    </view>
    
  </view>
</view>
