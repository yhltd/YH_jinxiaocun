         <text class='shangpin-text'  data-id="{{i}}"><text class="shangpinpm">{{szzhi[i].cpname}}</text>\n<text class="Hs">售价：<text class="red">{{szzhi[i].cpsj}}</text>\n进价：<text class="red">{{szzhi[i].cpjj}}</text>\n类别：<text class="red">{{szzhi[i].cplb}}</text>\n明细类别：<text class="red">{{szzhi[i].mxtype}}</text></text></text>
    </view>
       <view class='shangpin-jin'  data-id="{{i}}" >
            <view class='shangpin-input'  ><text class="Hs">数量：</text>{{szzhi[i].cpsl}}</view>
            <view class='shangpin-input'><text class="Hs">价格：</text>{{szzhi[i].cpjg}}</view>  
        </view>
  </view>
</view>

