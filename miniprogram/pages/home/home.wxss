.image {
  width: 80px;
  height: 80px;
  margin-bottom: 12px;
  border-radius: 20px;              
  background: linear-gradient(135deg, 
    #0f1b35 0%, 
    #1c2e4a 25%, 
    #2a4365 50%, 
    #3182ce 75%, 
    #4299e1 100%);
box-shadow: 
    0 8px 32px rgba(49, 130, 206, 0.4),
    inset 0 2px 4px rgba(102, 178, 255, 0.5),
    inset 0 -3px 6px rgba(0, 0, 0, 0.4),
    0 0 30px rgba(66, 153, 225, 0.3);
border: 2px solid rgba(102, 178, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid rgba(255, 255, 255, 0.6);
  transition: all 0.4s ease;
  position: relative;
  overflow: hidden;
  animation: iconFloat 3s infinite ease-in-out;
}

@keyframes iconFloat {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-5px);
  }
}

.image::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, 
      transparent, 
      rgba(255, 255, 255, 0.1), 
      rgba(157, 78, 221, 0.2),
      rgba(255, 255, 255, 0.1), 
      transparent);
  transform: rotate(45deg);
  transition: all 0.8s ease;
  animation: lightFlow 3s infinite linear;
}

@keyframes lightFlow {
  0% {
      transform: rotate(45deg) translateX(-100%);
  }
  100% {
      transform: rotate(45deg) translateX(100%);
  }
}

@keyframes iconFloat {
  0%, 100% {
      transform: translateY(0px);
  }
  50% {
      transform: translateY(-5px);
  }
}

.click:hover .image {
  animation: iconSpin 0.6s ease, iconFloat 2s infinite ease-in-out;
  box-shadow: 
      0 12px 40px rgba(90, 24, 154, 0.7),
      inset 0 2px 6px rgba(157, 78, 221, 0.8),
      inset 0 -4px 8px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(123, 44, 191, 0.6);
}

.click:hover .image::before {
  animation-duration: 2.5s;
  background: linear-gradient(45deg, 
      transparent, 
      rgba(255, 255, 255, 0.3), 
      rgba(157, 78, 221, 0.4),
      rgba(255, 255, 255, 0.3), 
      transparent);
}

@keyframes iconSpin {
  0% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(5deg) scale(1.1); }
  100% { transform: rotate(0deg) scale(1.05); }
}

