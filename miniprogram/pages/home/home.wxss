/* 悬浮弹窗样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(15, 27, 53, 0.8);
  backdrop-filter: blur(5px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.popup-container {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  background: linear-gradient(135deg, 
    rgba(36, 0, 70, 0.95) 0%, 
    rgba(60, 9, 108, 0.9) 50%, 
    rgba(90, 24, 154, 0.85) 100%);
  border: 2px solid rgba(102, 178, 255, 0.4);
  border-radius: 16px;
  box-shadow: 
    0 8px 32px rgba(49, 130, 206, 0.4),
    inset 0 2px 4px rgba(157, 78, 221, 0.3),
    inset 0 -3px 6px rgba(0, 0, 0, 0.4),
    0 0 30px rgba(66, 153, 225, 0.3);
  animation: popupShow 0.3s ease;
}

@keyframes popupShow {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(-50px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.popup-close {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, 
    #0f1b35 0%, 
    #1c2e4a 25%, 
    #2a4365 50%, 
    #3182ce 75%, 
    #4299e1 100%);
  border: 2px solid rgba(102, 178, 255, 0.4);
  border-radius: 50%;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 
    0 4px 15px rgba(49, 130, 206, 0.4),
    inset 0 1px 2px rgba(102, 178, 255, 0.5);
  z-index: 10;
  transition: all 0.3s ease;
}

.popup-close:hover {
  transform: scale(1.1) rotate(90deg);
  box-shadow: 
    0 6px 20px rgba(49, 130, 206, 0.6),
    inset 0 2px 4px rgba(102, 178, 255, 0.7);
}

.popup-content {
  padding: 60rpx 40rpx 40rpx;
}

.popup-title {
  color: #ffffff;
  font-size: 20px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 30rpx;
  text-shadow: 0 0 10px rgba(102, 178, 255, 0.5);
}

.popup-message {
  color: rgba(255, 255, 255, 0.9);
  font-size: 16px;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.popup-buttons {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.popup-btn {
  flex: 1;
  background: linear-gradient(135deg, 
    #0f1b35 0%, 
    #1c2e4a 25%, 
    #2a4365 50%, 
    #3182ce 75%, 
    #4299e1 100%);
  border: 2px solid rgba(102, 178, 255, 0.4);
  border-radius: 12px;
  color: #ffffff;
  font-size: 16px;
  font-weight: 600;
  padding: 20rpx 0;
  box-shadow: 
    0 4px 15px rgba(49, 130, 206, 0.3),
    inset 0 1px 2px rgba(102, 178, 255, 0.5);
  transition: all 0.3s ease;
}

.popup-btn.confirm {
  background: linear-gradient(135deg, 
    #1c2e4a 0%, 
    #2a4365 25%, 
    #3182ce 50%, 
    #4299e1 75%, 
    #66b2ff 100%);
}

.popup-btn.cancel {
  background: linear-gradient(135deg, 
    rgba(113, 128, 150, 0.8) 0%, 
    rgba(160, 174, 192, 0.6) 100%);
  border-color: rgba(200, 200, 200, 0.4);
}

.popup-btn:hover {
  transform: translateY(-2px);
  box-shadow: 
    0 6px 20px rgba(49, 130, 206, 0.5),
    inset 0 2px 4px rgba(102, 178, 255, 0.7);
}

.popup-btn:active {
  transform: translateY(0);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .popup-container {
    width: 90%;
    margin: 0 20rpx;
  }
  
  .popup-content {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .popup-btn {
    font-size: 14px;
    padding: 15rpx 0;
  }
}
