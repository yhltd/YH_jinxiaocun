::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: rgba(155, 153, 153, 0.589);
}

.table_header {
  display: inline-flex;
  z-index: 6;
  height: 100rpx;
  position: sticky;
  top: 0;
  background: linear-gradient(135deg, #FFA500, #FF8C00, #FF7F50);

}

.title{
  height: 100%;
  margin-right: 23rpx;
  display: inline-block;
