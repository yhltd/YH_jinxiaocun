/* packageX/page/order_panel/order_panel.wxss */
.header{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.menu{
  display: grid;
  padding-right:32rpx;
  grid-template-columns: 160rpx 1fr;
  gap: 20rpx;
}
.sidebar{
  width: 100%;
  height: 1148rpx;
  background-color: #f8f8f8;
  
}
.sidebar-item{
  display: flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  width:100%;
  height:138rpx;
  position: relative;
  
}
.item-label{
  font-size: 30rpx;
  font-weight: 400;
}
.left-line{
  width: 6rpx;
  height: 48rpx;
  background-color: #e60012;
  position: absolute;
  left: 0;
}
.active{
  background-color: #fff;
}
.menu-list{
  width: 100%;
  height: 1100rpx;
  
}
.menu-item{
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 5rpx;
}
.item-photo{
  width: 50%;
  height: 100%;
  background-color: greenyellow;
}

.footer{
  /* background-color: red; */
  width: 95%;
  border-radius: 60rpx;
 margin: 0 auto;

}
.footer_text{
  background-color: rgb(124, 124, 124);
  color: #000;
  display: flex;
  justify-content: right;
  border-radius: 60rpx;
  padding-left: 10rpx;
  line-height: 25rpx;
}

.text_money,.text_num{
  width:25%;
  height:100%;
  padding: 25rpx;
}
.footer_jiesuan{
  width: 100%;
  background-color:rgb(252, 222, 56);
  border-radius: 60rpx;
}
.item-price{
  margin-top:170rpx ;
  margin-left:15rpx ;
}
.item-name{
  margin-top:15rpx ;
  margin-left:15rpx ;
}
.item-chooseGG{
  background-color:rgb(252, 222, 56);
  width: 20%;
  height: 50rpx;
  margin-top:220rpx;
  margin-right: 0rpx;
  text-align: center;
  line-height: 48rpx;
  border-radius: 40%;
  color: #f8f8f8;
  font-size: 25rpx;
}

.popup-box{
  position: absolute;
  z-index: 99;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}
/* 上 */
.info-top{
  position: fixed;
  z-index: 999;
  width: 100%;
  top: 0;
  background-color: white;
  border-bottom-left-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}
/* 中 */
.info-center{
  position: fixed;
  z-index: 99;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  width: 90%;
  height: 70%;
  margin-left: 5%;
  margin-right: 5%;
  top: 50%;
  height: 50%;
  transform: translateY(-50%);
}
/* 下 */
.info-bottom{
  position: fixed;
  z-index: 999;
  width: 100%;
  bottom: 0;
  height: 70%;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
/* 左 */
.info-left{
  position: fixed;
  z-index: 999;
  width: 50%;
  height: 100%;
  top: 0;
  background-color: white;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
/* 右 */
.info-right{
  position: fixed;
  z-index: 999;
  width: 50%;
  height: 100%;
  right: 0;
  top: 0;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
