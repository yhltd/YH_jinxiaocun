page{
  height: 100%;
}

view {
  font-size: 30rpx;
}

button{
  font-size: 30rpx;
}
  

.table{
  display: inline-flex;
  flex-direction: column;
}

.sv_list{
  width: auto;
  white-space: nowrap;
  margin-top: 0px;
  height: 90%;
  background-color: #FCFCFC;
}

::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: rgba(155, 153, 153, 0.589);
}

.table_header {
  display: inline-flex;
  z-index: 1;
  height: 100rpx;
  position: sticky;
  top: 0;
}

.title{
  height: 100%;
  margin-right: 23rpx;
  display: inline-block;
  margin-left: 10px;
}

.title_text{
  display: flex;
  width: 200rpx;
  border-right: 1rpx solid #C4C5C9;
  border-bottom: 1rpx solid #C4C5C9;
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  background-color: #009688;
  color: white;
  font-weight: bold;
  font-size: 35rpx;  
}

.list_row{
  display: inline-flex;
  flex-direction: row;
}

.table_main{
  display: inline-flex;
  height: 7%;
}

.list_view{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 70rpx;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: black;
  border-right: 1rpx solid #C4C5C9;
  border-bottom: 1rpx solid #C4C5C9;
  line-height: 70rpx;  
}

.bottom_view{
  height: 10%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;  
}
.moreDo{
  width: 80%;
  background-color: #282B33;
  color: #E6E6E6;
  height: 75rpx;
}
.choiceMonth{
  width: 94%;
  height: 16%;
  position: fixed;
  background-color: white;
  bottom: 0;
  box-shadow: 0rpx -10rpx 10rpx black;
  left: 2%;
  border-radius: 10rpx;  
  z-index: 20;
}
.form_view{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input_choiceMonth{
  width: 48%;
  height: 50rpx;
  border: 5rpx solid #E6E6E6;
  margin-left: 5%;
  padding: 20rpx;
  line-height: 50rpx;
  border-radius: 15rpx;  
}
.bt_choiceMonth{
  width: 24%;
  height: 75rpx;
  background-color: #009688;
  color: white;  
}

.mask{
  visibility: visible;
  opacity: 1;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 19;
  transition: all 0.3s ease-in-out;
}