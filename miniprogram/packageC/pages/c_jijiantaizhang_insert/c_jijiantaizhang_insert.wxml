<view class="all">
  <form bindsubmit="save" bindreset="reset">
    <view class="code_input_view" bindtap="showGetCode" name="accounting" value="">{{accounting}}</view>
    <view class="input_view">
  <view class="input_text">项目名称</view>
  <input name="project" placeholder="请输入项目名称" value="{{project}}" bindinput="bindProjectInput"></input>
</view>
    <view class="input_view">
      <view class="input_text">日期</view>
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <input name="insert_date" placeholder="请输入日期" value="{{insert_date}}"></input>
      </picker>
    </view>
    <view class="input_view">
      <view class="input_text">客户/供应商</view>
      <picker bindchange="bindPickerChange1" value="{{index}}" range="{{kehu_list}}">
        <input name="kehu" placeholder="请输入客户/供应商" value="{{kehu}}" disabled="false"></input>
      </picker>
    </view>
    <view class="input_view">
      <view class="input_text">币种</view>
      <picker bindchange="bindPickerChange2" value="{{index}}" range="{{bizhong_list}}">
        <input name="bizhong" placeholder="请输入币种" value="{{bizhong}}" disabled="false"></input>
      </picker>
    </view>
    <view class="input_view" style="height: 220rpx;">
      <view class="input_text">应收</view>
      <input name="receivable" placeholder="请输入应收" type="number" value="{{receivable}}" bindinput="bindReceivableInput"></input>
      <button class="calculate-btn" size="mini" bindtap="calculateReceivable">应收计算</button>
    </view>
    <view class="input_view">
      <view class="input_text">实收</view>
      <input name="receipts" placeholder="请输入实收" type="number" value="{{receipts}}" bindinput="bindshishouInput"></input>
    </view>
    <view class="input_view" style="height: 220rpx;">
      <view class="input_text">应付</view>
      <input name="cope" placeholder="请输入应付" type="number" value="{{cope}}" bindinput="bindyingfuInput"></input>
      <button class="calculate-btn" size="mini" bindtap="calculatePayable">应付计算</button>
    </view>
    <view class="input_view">
      <view class="input_text">实付</view>
      <input name="payment" placeholder="请输入实付" type="number" value="{{payment}}" bindinput="bindshifuInput"></input>
    </view>
    <!-- 修改纳税金额和已交税金额部分 -->
<view class="input_view" style="height: 220rpx;">
  <view class="input_text">纳税金额</view>
  <input name="tax_amount" placeholder="请输入纳税金额" type="number" value="{{tax_amount}}"></input>
  <button class="calculate-btn" size="mini" bindtap="calculateTax">纳税计算</button>
</view>
<view class="input_view">
  <view class="input_text">已交税金额</view>
  <input name="paid_tax" placeholder="请输入已交税金额" type="number" value="{{paid_tax}}"></input>
</view>
    <view class="input_view">
      <view class="input_text">摘要</view>
      <input name="zhaiyao" placeholder="请输入摘要" type="text" value="{{zhaiyao}}"></input>
    </view>
    <view class="bottom">
      <button class="bt" form-type="reset" data-type="reset">重置</button>
      <button class="bt" form-type="submit" data-type="submit">保存</button>
      <button class="bt" form-type="submit" data-type="submitAndReset">保存并重置</button>
    </view>
  </form>
</view>

<view class="getCode_view" animation="{{animationData_getCode}}" hidden="{{initHidView?'true':''}}">
  <view class="sw_view" wx:for="{{getAccountingItems}}" wx:key="text" wx:for-item="items" wx:for-index="i">
    <view class="sw_text">{{items.text}}</view>
    <swiper class="sw" previous-margin="80rpx" next-margin="80rpx" circular="true" easing-function="linear" bindchange="changeClass">
      <swiper-item wx:for="{{items.list}}" wx:key="class" item-id="{{i}}">
        <view class="sw_item {{item.className == accounting ? 'active' : ''}}">{{item.className}}</view>
      </swiper-item>
    </swiper>
  </view>
</view>

<view class="mask" wx:if="{{hid_view}}" bindtap="{{hid_view?'hid_view':''}}" hidden="{{initHidView?'true':''}}">
</view>