page{
  height: 100%;
}

view {
  font-size: 30rpx;
}

button{
  font-size: 30rpx;
}
  

.table{
  display: inline-flex;
  flex-direction: column;
}

.sv_list{
  width: auto;
  white-space: nowrap;
  margin-top: 0px;
  height: 90%;
  background-color: #FCFCFC;
}

::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: rgba(155, 153, 153, 0.589);
}

.table_header {
  display: inline-flex;
  z-index: 1;
  height: 100rpx;
  position: sticky;
  top: 0;
}

.title{
  height: 100%;
  margin-right: 23rpx;
  display: inline-block;
  margin-left: 10px;
}

.title_text{
  display: flex;
  width: 200rpx;
  border-right: 1rpx solid #C4C5C9;
  border-bottom: 1rpx solid #C4C5C9;
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  background-color: #009688;
  color: white;
  font-weight: bold;
  font-size: 35rpx;  
}

.list_row{
  display: inline-flex;
  flex-direction: row;
}

.table_main{
  display: inline-flex;
  height: 7%;
}

.list_view{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 70rpx;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: black;
  border-right: 1rpx solid #C4C5C9;
  border-bottom: 1rpx solid #C4C5C9;
  line-height: 70rpx;  
}

.bottom_view{
  height: 10%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;  
}
.moreDo{
  margin: 0 auto;
  background-color: #282B33;
  color: #E6E6E6;
  height: 75rpx;
  line-height: 75rpx;
  width: 30%;  
}
.moreDo2{
  margin: 0 auto;
  background-color: #282B33;
  color: #E6E6E6;
  height: 75rpx;
  line-height: 75rpx;
  width: 80%;  
}
.choiceMonth{
  width: 94%;
  height: 16%;
  position: fixed;
  background-color: white;
  bottom: 0;
  box-shadow: 0rpx -10rpx 10rpx black;
  left: 2%;
  border-radius: 10rpx;  
  z-index: 20;
}
.form_view{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input_choiceMonth{
  width: 48%;
  height: 50rpx;
  border: 5rpx solid #E6E6E6;
  margin-left: 5%;
  padding: 20rpx;
  line-height: 50rpx;
  border-radius: 15rpx;  
}
.bt_choiceMonth{
  width: 24%;
  height: 75rpx;
  background-color: #009688;
  color: white;  
}

.mask{
  visibility: visible;
  opacity: 1;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 19;
  transition: all 0.3s ease-in-out;
}
.date-picker{
  width: 100%;
  margin: auto;
}

.select_view_box{
  background-color: #FFFFFF;
  width: 92%;
  height: 37%;
  position: fixed;
  bottom: 0;
  margin: 4%;
  border-radius: 20rpx;
  z-index: 20;
}

.option{
  height: auto;
  width: 100%;
  margin-top: 4%;  
  border : none;
}


.option_sv{
  height: 200rpx;
  width: 85%;
  border: 1px solid #282B33;
  border-radius: 10rpx;
  position: fixed;
  background-color: white;
  z-index: 20;
  top: 26%;
  left: 7%;
}
.option_text{
  width: 70%;
  height: 30px;
  border: 1rpx solid #282B33;
  padding-left: 20rpx;
  margin: auto;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  margin-top: 10%;
}
.option_bt{
  width: 100%;
  background-color: #282B33;
  text-align: center;
  line-height: 71rpx;
  height: 71rpx;
  border-radius: 0 10rpx 10rpx 0;
  color: white;   
}
.option_sv_item{
  width: 92%;
  border: 1rpx solid #282B33;
  text-align: center;
  margin: auto;
  height: 69rpx;
  line-height: 69rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  font-size: 35rpx;
}

.select_view{
  display: flex;
  align-items: center;
  height: 16%;
  margin-bottom: 56rpx;
}
.select_view_input{
  display: inline-flex;
  border: 5rpx solid #E6E6E6;
  border-radius: 15rpx;
  padding-left: 20rpx;
  width: 30%;
  margin-left: 8.5%;
}
.moreDo_bt_view{
  display: flex;
  height: 70%;
  flex-direction: row;
  align-items: center;
}
.moreDo_bt{
  width: 24%;
  background-color: #282B33;
  color: white;
}