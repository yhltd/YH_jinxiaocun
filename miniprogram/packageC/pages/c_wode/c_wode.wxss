.flow-bg {
  position: absolute;
  width: 200%;
  height: 100%;
  top: -0%;
  left: -50%;
  background: linear-gradient( 45deg, #efefef70 0%, #f1f1f175 80% );
  background-size: 400% 400%;
  animation: gradientFlow 15s ease infinite;
  z-index: 0;
  transition: all 0.5s ease;
}

@keyframes gradientFlow {
  0% {
      background-position: 0% 50%;
      transform: rotate(0deg);
  }
  50% {
      background-position: 100% 50%;
  }
  100% {
      background-position: 0% 50%;
      transform: rotate(360deg);
  }
}

/* 流动边框核心样式 */
.flow-border-container {
  position: relative; /* 必须设置为relative */
  z-index: 1; /* 确保内容在边框之上 */
  /* 原有容器样式保持不变 */
}


/* 流动边框伪元素 */
.flow-border-container::before {
  content: '';
  position: absolute;
  top: -4px;
  left: -4px;
  right: -4px;
  bottom: -4px;
  background: linear-gradient(45deg, 
      #ff0000, #ff7300, #fffb00, 
      #48ff00, #00ffd5, #002bff,
      #7a00ff, #ff00c8, #ff0000);
  background-size: 400%;
  border-radius: inherit;
  z-index: -1;
  animation: flowBorder 100s linear infinite;
  opacity: 0.8;
  transition: all 0.3s ease;
}


/* 内层遮罩伪元素 */
.flow-border-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit; /* 继承容器背景色 */
  border-radius: inherit; /* 继承容器圆角 */
  z-index: -1;
}


/* 悬停效果 */
.flow-border-container:hover::before {
  animation: flowBorder 8s linear infinite;
  opacity: 1;
  filter: blur(5px);
}


/* 流动动画 */
@keyframes flowBorder {
  0% { background-position: 0 0; }
  50% { background-position: 300% 0; }
  100% { background-position: 0 0; }
}

