<van-popup bind:click-overlay="qxShow" show="{{ tjShow }}" position="bottom" custom-style="height: 40%;" >
  <view class="lables">列</view>
    <input bindinput="onInput" data-column="thiscolumn" class="input_text_form"  value="{{thiscolumn}}" type="text" name="thiscolumn"></input>
    <view class="lables">公式</view>
    <input bindinput="onInput" data-column="gongshi" class="input_text_form" value="{{gongshi}}" type="text" name="gongshi" ></input>
  <view class="bottom_view" style="height:10%">
    <button class="bt_bottom" hover-class="bt_bottom_hover" bindtap="qxShow">取消</button>
    <button class="bt_bottom" hover-class="bt_bottom_hover" bindtap="add1">添加</button>
  </view>
</van-popup>

