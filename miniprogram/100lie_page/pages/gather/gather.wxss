.table {
  border: 2px solid darkgray;
  width: 80%;
  margin-top: 2rem;
  margin-right: 1rem;
  margin-left: 1rem;
   
   
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
 }
 .td {
   width:30%;
   justify-content: center;
   display: flex;
   text-align: center;
   border-right: 2px solid #ddd;
   height: 100%;
 }
 .td-1 {
   width:29%;
   justify-content: center;
   display: flex;
   align-items: center;
   text-align: center;
    border-right: 2px solid #ddd; 
   height: 100%;
 }
 .td-2 {
   width:70%;
   justify-content: center;
    /* border-right: 2px solid #ddd;  */
    align-items: center;
   text-align: left;
   height: 100%;
   max-width: 100%;
   padding: 40rpx 0;
 }
 .bg-w{
  background: #afb4db;
   
 }
 .bg-g{
  background: #E6F3F9;
 }
 .bg-g2{
  background: #fff;
 }
 .th {
  width: 29%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  border-right: 2px solid #ddd; 
 }
 .th-2 {
  width: 70%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  max-height: 3rem;
  max-width: 80%;
 }
 .th-text {
  width: 70%;
  justify-content: center;
  color: #000;
  display: block;
  display: flex;
  height: 3rem;
  align-items: center;
  max-height: 3rem;
  max-width: 80%;
 }
 