<scroll-view class="sv_list" scroll-x="true" scroll-y="true" style="height:88%">
  <view class="table">
    <view class='table_header'>
      <block class="title" wx:for="{{title}}">
        <view class="title_text" style="width:{{item.width}};{{item.text==''?'position:sticky;left:0;z-index:5':''}}">{{item.text}}</view>
      </block>
    </view>
    <block class="list_row" wx:for="{{list}}" wx:for-item="list_item" wx:for-index="i" wx:key="id">
      <view class="table_main">
        <view class="{{list_item.wancheng=='完成'?'list_view2':list_item.wancheng=='未完成-缺货'?'list_view3':list_item.wancheng=='未完成-配错货'?'list_view4':list_item.wancheng=='配货作业中'?'list_view5':list_item.wancheng=='配货完成'?'list_view6':'list_view'}}" wx:for="{{title}}" wx:for-item="item" wx:key="item"  style="width:{{item.width}}" data-index="{{i}}" data-column="{{item.columnName}}" data-value="{{list_item[item.columnName]}}" data-input_type="{{item.type}}" data-isupd="{{item.isupd}}" bindtap="clickView">
          <view class="{{list_item.kucun=='处理当中'?'list_text2':list_item.kucun=='处理完成'?'list_text3':list_text}}">{{item.columnName == 'rownum' ? i+1 : list_item[item.columnName]}}</view>
        </view>
      </view>
    </block>
  </view>
</scroll-view>

