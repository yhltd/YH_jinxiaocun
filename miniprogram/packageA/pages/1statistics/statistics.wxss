  padding: 20rpx;
  background-color: #fafafa;
}

/* 文本预览区域样式 */
.chart-preview {
  margin-top: 40rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.preview-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.preview-info text {
  font-size: 26rpx;
  color: #666;
}

/* 文本表格样式 */
.text-chart {
  margin-top: 20rpx;
}

.text-chart-header {
  margin-bottom: 20rpx;
}

.text-chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.text-chart-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 15rpx 0;
}

.header-row {
  font-weight: bold;
  background-color: #f9f9f9;
}

.text-chart-cell {
  font-size: 24rpx;
  color: #666;
  padding: 0 10rpx;
  text-align: center;
}

.no-chart-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 图表显示区域样式 */
.chart-area {
  background-color: white;
  border-radius: 16rpx;
  margin: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  min-height: 600rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.chart-actions {
  display: flex;
  gap: 20rpx;
}

.refresh-btn,
.export-btn {
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  background-color: #764ba2;
  color: white;
  border: none;
}

.refresh-btn:active,
.export-btn:active {
  background-color: #5a3b7c;
  transform: scale(0.98);
}

/* 图表滚动容器 */
.chart-scroll-container {
  -webkit-overflow-scrolling: touch;
  overflow-anchor: auto;
}

.chart-container {
  padding: 40rpx;
}

/* Canvas 容器 */
.canvas-container {
  width: 100%;
  min-height: 500rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 预览信息 */
.preview-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  background-color: #f9f9f9;
  padding: 25rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  border-left: 4rpx solid #764ba2;
}

.preview-info text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 文本图表 */
.text-chart {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.03);
}

.text-chart-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.text-chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.text-chart-row {
  display: flex;
  flex-direction: row;
  min-width: 100%;
  transition: background-color 0.3s;
}

.text-chart-row:hover {
  background-color: #f9f9f9;
}

.header-row {
  background-color: #764ba2;
  color: white;
  border-radius: 8rpx 8rpx 0 0;
}

.text-chart-cell {
  padding: 20rpx 15rpx;
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  text-align: center;
  min-width: 150rpx;
  flex-shrink: 0;
  font-size: 24rpx;
  word-break: break-all;
}

.header-row .text-chart-cell {
  border-bottom: none;
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
  font-weight: bold;
}

.header-row .text-chart-cell:last-child {
  border-right: none;
}

.text-chart-row:last-child .text-chart-cell {
  border-bottom: none;
}

.no-chart-data {
  text-align: center;
  padding: 100rpx 40rpx;
  font-size: 28rpx;
  color: #999;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border: 1rpx dashed #ddd;
}

/* 底部提示 */
.chart-bottom-tips {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
  background-color: #fafafa;
  border-radius: 0 0 12rpx 12rpx;
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .chart-area {
    margin: 20rpx;
    border-radius: 12rpx;
  }
  
  .chart-header {
    padding: 25rpx 30rpx;
    flex-direction: column;
    align-items: flex-start;
    gap: 20rpx;
  }
  
  .chart-actions {
    width: 100%;
    justify-content: flex-end;
  }
  
  .chart-container {
    padding: 30rpx 20rpx;
  }
  
  .canvas-container {
    padding: 20rpx 10rpx;
  }
  
  .text-chart-cell {
    min-width: 120rpx;
    padding: 15rpx 10rpx;
    font-size: 22rpx;
  }
}