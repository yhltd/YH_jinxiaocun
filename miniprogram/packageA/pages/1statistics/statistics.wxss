/* pages/statistics/statistics.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.config-list {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  width: 90%;
}

.config-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.config-list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
  color: white;
  border-radius: 25rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  height: auto;
  line-height: normal;
}

.config-item {
  padding: 25rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  transition: all 0.3s;
}

.config-item.active {
  border-color: #764ba2;
  background-color: rgba(118, 75, 162, 0.05);
}

.config-info {
  flex: 1;
}

.config-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.config-type {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.config-actions {
  display: flex;
  gap: 15rpx;
}

.edit-btn {
  background: #1890ff;
  color: white;
  border-radius: 15rpx;
  font-size: 22rpx;
  padding: 8rpx 15rpx;
  height: auto;
  line-height: normal;
}

.delete-btn {
  background: #ff4d4f;
  color: white;
  border-radius: 15rpx;
  font-size: 22rpx;
  padding: 8rpx 15rpx;
  height: auto;
  line-height: normal;
}

.chart-area {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chart-actions {
  display: flex;
  gap: 15rpx;
}

.refresh-btn {
  background: #2fc25b;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  height: auto;
  line-height: normal;
}

.export-btn {
  background: #8543e0;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  height: auto;
  line-height: normal;
}

.chart-container {
  min-height: 400rpx;
  background: #fafafa;
  border-radius: 8rpx;
  padding: 30rpx;
}

.chart-preview {
  background: white;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 1rpx solid #e8e8e8;
}

.preview-info {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.preview-info text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.text-chart {
  background: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
}

.text-chart-header {
  margin-bottom: 20rpx;
  text-align: center;
}

.text-chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.text-chart-row {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 15rpx 0;
}

.text-chart-row.header-row {
  background: #f0f0f0;
  font-weight: bold;
}

.text-chart-cell {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  padding: 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.no-chart-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.tips-card {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 25rpx;
}

.tips-content {
  margin-bottom: 30rpx;
}

.tips-content text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  padding-left: 20rpx;
  position: relative;
}

.tips-content text::before {
  content: "•";
  position: absolute;
  left: 0;
  color: #764ba2;
}

.create-btn {
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
  color: white;
  border-radius: 25rpx;
  font-size: 30rpx;
  padding: 25rpx;
  width: 100%;
}

.add-field-btn {
  background: #1890ff;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  height: auto;
  line-height: normal;
  width: 200rpx;
}

/* 模态框按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
  color: white;
  border-radius: 25rpx;
}

.btn-primary:hover {
  opacity: 0.9;
}

