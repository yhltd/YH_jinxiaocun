/*头部设置flex并吸顶，因为是改成纵向渲染所以不会有很大影响，并且可以实现标题和列表同步*/

.table_header {
  display: inline-flex;
  position: sticky;
  top: 0rpx;
  z-index: 1;
}

.th {
  display: flex;
  flex-direction: column;
  width: 150rpx;
  height: 90rpx;
  background: linear-gradient(135deg, 
    rgba(15, 27, 53, 0.9) 0%, 
    rgba(28, 46, 74, 0.8) 50%, 
    rgba(42, 67, 101, 0.7) 100%);
  border-right: 1rpx solid rgba(102, 178, 255, 0.2);
  border-bottom: 1rpx solid rgba(102, 178, 255, 0.3);
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  font-weight: 500;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  box-shadow: 
    inset 0 1px 1px rgba(102, 178, 255, 0.1),
    0 1px 2px rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.th.change {
  width: 300rpx;
}

.th.change_x {
  width: 190rpx;
}

.th.tap {
  width: 101rpx;
  background-color: white;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
}

.th.tap_120 {
  width: 120rpx;
  background-color: white;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
}

.cell_label {
  font-size: 34rpx;
  color: rgba(255, 255, 255, 0.9);
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 50rpx;
