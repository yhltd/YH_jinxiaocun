/*底部抽屉样式 start*/

.mask-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9;
}

.region-box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  padding-top: 20rpx;
  height: 712rpx;
  padding: 40rpx 30rpx 48rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}

.region-txt {
  width: 96rpx;
  height: 82rpx;
  background: #e9edfc;
  line-height: 82rpx;
  border-radius: 6rpx;
  /* display: inline-block; */
  font-size: 30rpx;
  color: #333;
  text-align: center;
  margin-right: 23rpx;
  margin-bottom: 26rpx;
  flex-grow: 1;
}

.region-txt:nth-of-type(6n) {
  margin-right: 0;
}

.grow {
  flex-grow: 0;
}

.active {
  background: #5677fc;
  color: #fff;
}

/* 下方按钮区域 */
.down {
  display: flex;
  position: sticky;
  z-index: 1;
  flex-direction: column;
  margin-top: -150rpx;
  background: linear-gradient(135deg, 
  #0f1b35 0%, 
  #1c2e4a 25%, 
  #2a4365 50%, 
  #3182ce 75%, 
  #4299e1 100%);
  box-shadow: 
    0 8px 32px rgba(49, 130, 206, 0.4),
    inset 0 2px 4px rgba(102, 178, 255, 0.5),
    inset 0 -3px 6px rgba(0, 0, 0, 0.4),
    0 0 30px rgba(66, 153, 225, 0.3);
  border: 2px solid rgba(102, 178, 255, 0.4);
  border-radius: 16px;
  padding: 10rpx 0;
  margin-top: 1px;
}

.pageButton, .btn-primary {
  background: linear-gradient(135deg, 
  #0f1b35 0%, 
  #1c2e4a 25%, 
  #2a4365 50%, 
  #3182ce 75%, 
  #4299e1 100%);
  box-shadow: 
    0 8px 32px rgba(49, 130, 206, 0.4),
    inset 0 2px 4px rgba(102, 178, 255, 0.5),
    inset 0 -3px 6px rgba(0, 0, 0, 0.4),
    0 0 30px rgba(66, 153, 225, 0.3);
  border: 2px solid rgba(102, 178, 255, 0.4);
  border-radius: 10px;
  color: white;
  font-weight: 600;
  font-size: 14px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.pageButton_page {
    background: linear-gradient(135deg, 
    #0f1b35 0%, 
    #1c2e4a 25%, 
    #2a4365 50%, 
    #3182ce 75%, 
    #4299e1 100%);
    box-shadow: 
      0 8px 32px rgba(49, 130, 206, 0.4),
      inset 0 2px 4px rgba(102, 178, 255, 0.5),
      inset 0 -3px 6px rgba(0, 0, 0, 0.4),
      0 0 30px rgba(66, 153, 225, 0.3);
    border: 2px solid rgba(102, 178, 255, 0.4);
  border-radius: 10px;
  color: white;
  font-weight: 600;
  font-size: 14px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.pageButton:active, .btn-primary:active {
  transform: translateY(0);
  transition: transform 0.1s ease;
}

/* 按钮光效 */
.pageButton::before, .btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s ease;
}

.pageButton-hover::before, .btn-hover::before {
  left: 100%;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .down {
    margin: 10rpx;
    padding: 15rpx 0;
  }
  
  .pageButton, .btn-primary, .pageButton_page {
    font-size: 12px;
    padding: 10rpx 20rpx;
  }
  
  view[style*="width:5%"] {
    width: 3% !important;
  }
  
  view[style*="width:10%"] {
    width: 5% !important;
  }
}

/* 左侧抽屉样式 */
.d-container {
  padding: 40rpx 30rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, 
    rgba(36, 0, 70, 0.95) 0%, 
    rgba(60, 9, 108, 0.9) 50%, 
    rgba(90, 24, 154, 0.85) 100%);
}

/* 权限显示样式 */
.d-container > view:first-child {
  background: linear-gradient(135deg, 
    rgba(9, 86, 158, 0.4) 0%, 
    rgba(4, 54, 95, 0.3)0%);
  border: 2px solid rgba(102, 178, 255, 0.4);
  padding: 20rpx;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  margin-bottom: 30rpx;
  text-align: center;
}

.d-container > view:first-child text:first-child {
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.d-container > view:first-child text:last-child {
  color: #fff;
  font-weight: 700;
  text-shadow: 0 0 10px rgba(157, 78, 221, 0.5);
}


/* 返回按钮特殊样式 */
.btn-primary-back {
  background: linear-gradient(135deg, 
  #0f1b35 0%, 
  #1c2e4a 25%, 
  #2a4365 50%, 
  #3182ce 75%, 
  #4299e1 100%);
  box-shadow: 
    0 8px 32px rgba(49, 130, 206, 0.4),
    inset 0 2px 4px rgba(102, 178, 255, 0.5),
    inset 0 -3px 6px rgba(0, 0, 0, 0.4),
    0 0 30px rgba(66, 153, 225, 0.3);
  border: 2px solid rgba(102, 178, 255, 0.4);
  margin-bottom: 20rpx;
  font-size: 20px;
  color:white;
  font-weight: 600px;
}


/* 按钮光效 */
.btn-primary::before, .btn-primary-back::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
  transition: left 0.6s ease;
}

.btn-hover::before {
  left: 100%;
}

/* 按钮点击效果 */
.btn-primary:active, .btn-primary-back:active {
  transform: translateY(0);
  transition: transform 0.1s ease;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .d-container {
    padding: 30rpx 20rpx;
  }
  
  .btn-primary, .btn-primary-back {
    font-size: 14px;
    padding: 18rpx 25rpx;
  }
  
  .d-container > view:first-child {
    padding: 15rpx;
    margin-bottom: 20rpx;
  }
}


