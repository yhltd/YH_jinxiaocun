  margin: 2rpx;

}

.cell_label_header{
  font-size: 39rpx;
  color: rgba(255, 255, 255, 0.9);
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 90rpx;
}

.cell_date_label {
  font-size: 20rpx;
  color: rgba(74, 74, 74, 1);
}

.table_main {
  display: inline-flex;
  flex-direction: row;
}

.right-item {
  display: flex;
  flex-direction: row;
}

.td {
  display: flex;
  flex-direction: column;
  width: 150rpx;
  /* height: 90rpx; */
  height: 60rpx;
  background: #f0fff0;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgba(218, 217, 217, 1);
