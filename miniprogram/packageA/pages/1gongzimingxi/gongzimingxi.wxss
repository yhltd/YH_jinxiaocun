/*通用结构  */

page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}


.down {
  display: flex;
  position: sticky;
  z-index: 1;
  flex-direction: column;
}

.table {
  display: inline-flex;
  flex-direction: column;
  border-bottom: 0;
  top: 80rpx;
}

.scrollClass {
  display: flex;
  width: auto;
  white-space: nowrap;
  margin-top: 0px;
  height: 75%;
  background-color: white;
  border: 1rpx solid rgba(218, 217, 217, 1);
}

/*头部设置flex并吸顶，因为是改成纵向渲染所以不会有很大影响，并且可以实现标题和列表同步*/

.table_header {
  display: inline-flex;
  position: sticky;
  top: 0rpx;
  z-index: 1;
}

.th {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 90rpx;
  background: #d2f1f0;
  border-right: 1rpx solid #fff;
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch
}

.th.change {
  width: 300rpx;
}

.th.tap {
  width: 101rpx;
  background-color: white;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
}

.th.tap_120 {
  width: 120rpx;
  background-color: white;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
}

.cell_label {
  font-size: 26rpx;
  color: rgba(74, 74, 74, 1);
}

.cell_date_label {
  font-size: 20rpx;
  color: rgba(74, 74, 74, 1);
}

.table_main {
  display: inline-flex;
  flex-direction: row;
}

.right-item {
  display: flex;
  flex-direction: row;
}

.td {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  /* height: 90rpx; */
  height: 50rpx;
  background: #f0fff0;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-top: 0;
  border-left: 0;
}

/*新增加的样式*/

.btn-box {
  padding: 30rpx;
}

.first {
  margin-top: 50rpx;
}

.d-container {
  width: 260rpx;
  padding: 80rpx 30rpx;
  background-color: #f2f2f2;
  height: 100%;
}

/*底部抽屉样式 start*/

.mask-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9;
}

.region-box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  padding-top: 20rpx;
  height: 712rpx;
  padding: 40rpx 30rpx 48rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}

.region-txt {
  width: 96rpx;
  height: 82rpx;
  background: #e9edfc;
  line-height: 82rpx;
  border-radius: 6rpx;
  /* display: inline-block; */
  font-size: 30rpx;
  color: #333;
  text-align: center;
  margin-right: 23rpx;
  margin-bottom: 26rpx;
  flex-grow: 1;
}

.region-txt:nth-of-type(6n) {
  margin-right: 0;
}

.grow {
  flex-grow: 0;
}

.active {
  background: #5677fc;
  color: #fff;
}

/*底部抽屉样式 end*/