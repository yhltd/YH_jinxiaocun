/*通用结构  */

page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.down {
  display: flex;
  position: sticky;
  z-index: 1;
  flex-direction: column;
}

.table {
  display: inline-flex;
  flex-direction: column;
  border-bottom: 0;
  top: 80rpx;
}

.scrollClass {
  display: flex;
  width: auto;
  white-space: nowrap;
  margin-top: 0px;
  height: 75%;
  background-color: white;
  border: 1rpx solid rgba(218, 217, 217, 1);
}

/*头部设置flex并吸顶，因为是改成纵向渲染所以不会有很大影响，并且可以实现标题和列表同步*/

.table_header {
  display: inline-flex;
  position: sticky;
  top: 0rpx;
  z-index: 1;
}

.th {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 90rpx;
  background: #d2f1f0;
  border-right: 1rpx solid #fff;
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch
}



.th.change {
  width: 300rpx;
}

.th.tap {
  width: 101rpx;
  background-color: white;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
  position: sticky;
  top: 0;
  left: 0;
}

.th.tap_120 {
  width: 120rpx;
  background-color: white;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
}

.cell_label {
  font-size: 26rpx;
  color: rgba(74, 74, 74, 1);
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 50rpx;

}

.cell_label_header{
  font-size: 26rpx;
  color: rgba(74, 74, 74, 1);
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
}

.cell_date_label {
  font-size: 20rpx;
  color: rgba(74, 74, 74, 1);
}

.table_main {
  display: inline-flex;
  flex-direction: row;
}

.td {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  /* height: 90rpx; */
  height: 53rpx;
  background: #f0fff0;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-top: 0;
  border-left: 0;
}



/*底部抽屉样式 end*/