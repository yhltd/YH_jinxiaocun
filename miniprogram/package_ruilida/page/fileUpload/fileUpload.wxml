<scroll-view class="main" scroll-x="true" scroll-y="true">
  <view style="padding-top: 10px;" wx:for="{{list}}" wx:for-item="list_item" wx:for-index="i" wx:key="id">
    <van-cell-group inset>
      <van-cell data-index="{{i}}" title="{{list_item.file_name}}" bindtap="file_dowload" bindlongpress="del1"/>
    </van-cell-group>
  </view>
</scroll-view>

<view class="bottom_view">
  <view class="bt_text">合计：{{num}}个</view>
  <button class="bt_bottom" bindtap="file_upload">上传文件</button>
</view>