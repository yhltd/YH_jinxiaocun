<scroll-view class="main" scroll-x="true" scroll-y="true">
  <view style="padding-top: 10px;">
    <view class="title_text">商品基本信息：</view>
    <van-cell-group inset>
      <van-field
        bind:input="onInput"
        model:value="{{ product_body.name }}"
        data-column="name"
        label="商品名称"
        placeholder="请输入商品名称"
        border="false"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ product_body.type }}"
        data-column="type"
        bind:click-input="xiala_show"
        label="商品分类"
        placeholder="请输入商品分类"
        border="false"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ product_body.danwei }}"
        data-column="danwei"
        bind:click-input="xiala_show"
        label="单位"
        placeholder="请输入单位"
        border="false"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ product_body.caizhi }}"
        data-column="caizhi"
        label="材质"
        placeholder="请输入材质"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ product_body.jishu_biaozhun }}"
        data-column="dizhi"
        label="技术标准"
        placeholder="请输入技术标准"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ product_body.zhibao_dengji }}"
        data-column="zhibao_dengji"
        bind:click-input="xiala_show"
        label="质保等级"
        placeholder="请输入质保等级"
        border="false"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ product_body.beizhu }}"
        data-column="beizhu"
        label="备注"
        placeholder="请输入备注"
        border="false"
      />
    </van-cell-group>
  </view>

  <view wx:for="{{lianxi_list}}" wx:for-item="list_item" wx:for-index="i" wx:key="id" style="padding-top: 10px;">
    <view class="title1">
      <view class="title_item">商品信息{{i+1}}：</view>
      <van-icon bind:click="del_lianxiren" name="close" size="20px" style="display: {{i==0?'none':'flex'}};" data-index="{{i}}"/>
    </view> 
    <van-cell-group inset>
      <van-field
        bind:input="onInput"
        model:value="{{ list_item.guige }}"
        data-column="guige"
        data-index="{{i}}"
        label="规格"
        placeholder="请输入规格"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.bianhao }}"
        data-column="bianhao"
        data-index="{{i}}"
        label="编号"
        placeholder="请输入编号"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.lingshou_price }}"
        data-column="lingshou_price"
        data-index="{{i}}"
        label="零售价格"
        placeholder="请输入零售价格"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.lingshou_bili }}"
        data-column="lingshou_bili"
        data-index="{{i}}"
        label="零售上浮比例"
        placeholder="请输入零售上浮比例"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.pifa_price }}"
        data-column="pifa_price"
        data-index="{{i}}"
        label="批发价格"
        placeholder="请输入批发价格"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.pifa_bili }}"
        data-column="pifa_bili"
        data-index="{{i}}"
        label="批发上浮比例"
        placeholder="请输入批发上浮比例"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.dakehu_price }}"
        data-column="dakehu_price"
        data-index="{{i}}"
        label="大客户价格"
        placeholder="请输入大客户价格"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.dakehu_bili }}"
        data-column="dakehu_bili"
        data-index="{{i}}"
        label="大客户上浮比例"
        placeholder="请输入大客户上浮比例"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.caigou_price }}"
        data-column="caigou_price"
        data-index="{{i}}"
        label="采购价格"
        placeholder="请输入采购价格"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.jinxiang }}"
        data-column="jinxiang"
        data-index="{{i}}"
        label="进项税率"
        placeholder="请输入进项税率"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.xiaoxiang }}"
        data-column="xiaoxiang"
        data-index="{{i}}"
        label="销项税率"
        placeholder="请输入销项税率"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.enable }}"
        data-column="enable"
        data-index="{{i}}"
        bind:click-input="xiala_show"
        label="是否启用"
        placeholder="请输入是否启用"
        border="false"
        readonly="true"
      />
      <van-image width="100" height="100" src="https://img.yzcdn.cn/vant/cat.jpeg" />
    </van-cell-group>
  </view>
  <view class="bottom_view" style="padding-bottom: 10px;">
    <button class="bt_bottom" bindtap="add_lianxiren">添加商品</button>
  </view>
</scroll-view>

<view class="bottom_view"> 
  <button class="bt_bottom" bindtap="save">保存</button>
  <button class="bt_bottom" bindtap="back">取消</button>
</view>

<!--表单下拉选择-->
<van-action-sheet show="{{xlShow2}}" actions="{{list_xiala}}" close-on-click-overlay bind:close="select2" bind:select="select2" />