<scroll-view class="main" scroll-x="true" scroll-y="true">
  <view style="padding-top: 10px;">
    <view class="title_text">销售报价单信息：</view>
    <van-cell-group inset>
      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.bianhao }}"
        data-column="bianhao"
        label="报价单编号"
        placeholder="请输入报价单编号"
        border="false"
        readonly="true"
      />

      <picker class="pick" mode="date" value="{{date}}" data-column_name="riqi" bindchange="choiceDate">
        <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.riqi }}"
        data-column="riqi"
        label="日期"
        placeholder="请输入日期"
        border="false"
        readonly="true"
      />
      </picker>


      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.kehu }}"
        data-column="kehu"
        label="客户"
        placeholder="请选择客户"
        border="false"
        bind:click-input="xiala_show"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.jiage_dengji }}"
        data-column="jiage_dengji"
        label="客户价格等级"
        placeholder="选择客户后自动带出"
        border="false"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.yewuyuan }}"
        data-column="yewuyuan"
        label="业务员"
        placeholder="请选择业务员"
        border="false"
        bind:click-input="xiala_show"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.dianpu }}"
        data-column="dianpu"
        label="店铺"
        placeholder="请选择店铺"
        border="false"
        bind:click-input="xiala_show"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.xiaoxiang_shuilv }}"
        data-column="xiaoxiang_shuilv"
        label="销项税率%"
        placeholder="请输入销项税率%"
        border="false"
        type="number"
