        placeholder="请选择审核人"
        border="false"
        bind:click-input="xiala_show"
        readonly="true"
      />
    </van-cell-group>
  </view>

  <view wx:for="{{lianxi_list}}" wx:for-item="list_item" wx:for-index="i" wx:key="id" style="padding-top: 10px;">
    <view class="title1">
      <view class="title_item">商品信息{{i+1}}：</view>
      <van-icon bind:click="del_lianxiren" name="close" size="20px" style="display: {{i==0?'none':'flex'}};" data-index="{{i}}"/>
    </view> 
    <van-cell-group inset>
      <van-field
        bind:input="onInput"
        model:value="{{ list_item.shangpin_bianhao }}"
        data-column="shangpin_bianhao"
        bind:click-input="product_select"
        data-index="{{i}}"
        label="商品编码"
        placeholder="请输入商品编码"
        border="false"
        readonly="true"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.shangpin_mingcheng }}"
        data-column="shangpin_mingcheng"
        data-index="{{i}}"
        label="商品名称"
        placeholder="请输入商品名称"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.guige }}"
        data-column="guige"
        data-index="{{i}}"
        label="规格"
        placeholder="请输入规格"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.caizhi }}"
        data-column="caizhi"
        data-index="{{i}}"
        label="材质"
        placeholder="请输入材质"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.jishu_biaozhun }}"
        data-column="jishu_biaozhun"
        data-index="{{i}}"
        label="技术标准"
        placeholder="请输入技术标准"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.zhibao_dengji }}"
        data-column="zhibao_dengji"
        data-index="{{i}}"
        label="质保等级"
        placeholder="请输入质保等级"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.danwei }}"
        data-column="danwei"
        data-index="{{i}}"
        label="单位"
        placeholder="请输入单位"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.shuliang }}"
        data-column="shuliang"
        data-index="{{i}}"
        label="数量"
        placeholder="请输入数量"
        border="false"
        type="number"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.baojia_danjia }}"
        data-column="baojia_danjia"
        data-index="{{i}}"
        label="报价单价"
        placeholder="请输入报价单价"
        border="false"
        type="digit"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.jiashui_xiaoji }}"
        data-column="jiashui_xiaoji"
        data-index="{{i}}"
        label="价税小计"
        placeholder="请输入价税小计"
        border="false"
        type="digit"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.jianyi_baojia }}"
        data-column="jianyi_baojia"
        data-index="{{i}}"
        label="建议报价"
        placeholder="请输入建议报价"
        border="false"
        type="digit"
        readonly="true"
      />

      <picker class="pick" mode="date" value="{{date}}" data-index="{{i}}" data-column_name="xuyong_riqi" bindchange="choiceDate">
        <van-field
          bind:input="onInput"
          model:value="{{ list_item.xuyong_riqi }}"
          data-column="xuyong_riqi"
          data-index="{{i}}"
          label="需用日期"
          placeholder="请输入需用日期"
          border="false"
          readonly="true"
        />
      </picker>

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.baojia_fudong }}"
        data-column="baojia_fudong"
        data-index="{{i}}"
        label="报价浮动%"
        placeholder="请输入报价浮动%"
        border="false"
        type="number"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ list_item.beizhu }}"
        data-column="beizhu"
        data-index="{{i}}"
        label="备注"
        placeholder="请输入备注"
        border="false"
      />
    </van-cell-group>
  </view>
  <view class="bottom_view" style="padding-bottom: 10px;">
    <button class="bt_bottom" bindtap="add_lianxiren">添加商品</button>
  </view>
</scroll-view>

<view class="bottom_view"> 
  <button class="bt_bottom" bindtap="save">保存</button>
  <button class="bt_bottom" bindtap="back">取消</button>
</view>

<!--表单下拉选择-->
<van-action-sheet show="{{xlShow2}}" actions="{{list_xiala}}" close-on-click-overlay bind:close="select2" bind:select="select2" />

<!--选择商品-->
<van-popup
  show="{{ product_show }}"
  close-on-click-overlay
  position="bottom"
  custom-style="height: 80%"
  bind:close="qxShow"
>
  <view style="height: 18%;">
    <view style="display: flex;">
      <view class="lables">商品分类：</view>
      <input bindinput="onInput_text" data-column="type" class="input_text_form" value="{{type}}" type="text" name="type"></input>
    </view>
    <view style="display: flex;">
      <view class="lables">商品名称：</view>
      <input bindinput="onInput_text" data-column="name" class="input_text_form" value="{{name}}" type="text" name="name"></input>
    </view>
  </view>
  <scroll-view style="height:70%" scroll-x="true" scroll-y="true">
    <van-cell-group style="height: 70%;">
    <van-cell
      wx:for="{{ product_list }}"
      wx:key="index"
      title="{{ item.name }}"
      value-class="value-class"
      clickable
      data-index="{{ index }}"
      bind:click="product_click"
      wx:if="{{item.isselect == 1}}"
      use-label-slot
    >
      <view slot="label">
        <text>规格：{{item.guige}} \n</text>
        <text>库存：{{0}} \n</text>
        <text decode="{{true}}">零售价格：{{item.lingshou_price}} &nbsp;&nbsp; 批发价格：{{item.pifa_price}} &nbsp;&nbsp; 大客户价格：{{item.dakehu_price}} \n</text>
      </view>
    </van-cell>
  </van-cell-group>
  </scroll-view>
  <view class="bottom_view" style="margin-top: 10px;">
    <button class="bt_bottom" bindtap="sel_product">查询</button>
  </view>
</van-popup>