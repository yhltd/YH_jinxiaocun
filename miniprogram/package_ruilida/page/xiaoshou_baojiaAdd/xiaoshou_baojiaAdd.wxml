      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.beizhu }}"
        data-column="beizhu"
        label="备注"
        placeholder="请输入备注"
        border="false"
      />

      <van-field
        bind:input="onInput"
        model:value="{{ baojia_body.shenhe }}"
