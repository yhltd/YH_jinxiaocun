<scroll-view class="main" scroll-x="true" scroll-y="true">
  <view style="padding-top: 10px;" wx:for="{{list}}" wx:for-index="i" wx:key="item">
    <van-cell-group inset data-index="{{i}}" >
      <van-cell title="{{item.bianhao}}" use-label-slot>
        <view slot="label">
          <text>客户：{{item.kehu}} \n</text>
          <text>日期：{{item.riqi}} \n</text>
          <text>审核人：{{item.shenhe}} \n</text>
          <text>审核状态：{{item.shenhe_zhuangtai}} \n</text>
          <van-tag style="margin-right: 5px;" type="{{item.chuku_zhuangtai=='未出库'?'warning':item.chuku_zhuangtai=='部分出库'?'primary':'success'}}">{{item.chuku_zhuangtai}}</van-tag>
          <van-tag style="margin-right: 5px;" type="{{item.kaipiao_zhuangtai=='未开票'?'warning':item.kaipiao_zhuangtai=='部分开票'?'primary':'success'}}">{{item.kaipiao_zhuangtai}}</van-tag>
          <van-tag type="{{item.shoukuan_zhuangtai=='未收款'?'warning':item.shoukuan_zhuangtai=='部分收款'?'primary':'success'}}">{{item.shoukuan_zhuangtai}}</van-tag>
        </view>
      </van-cell>

      <van-cell title="{{product_item.shangpin_mingcheng}}" use-label-slot wx:for="{{item.item}}" wx:for-item="product_item" wx:key="{{product_item}}">
        <view slot="label">
          <text>规格：{{product_item.guige}} \n</text>
          <text decode="{{true}}">数量：{{product_item.shuliang}} &nbsp;&nbsp;单价：{{product_item.baojia_danjia}} &nbsp;&nbsp;价税小计：{{product_item.jiashui_xiaoji}} \n</text>
          <text>未出数量：{{product_item.weichu_shuliang}} \n</text>
        </view>
      </van-cell>
      <van-cell>
        <text slot="title" style="font-size: 30rpx;">价税合计</text>
        <text style="color: black;">{{p_heji}}</text>
      </van-cell> 
    </van-cell-group>
  </view> 

  <view style="padding-top: 10px;" >
    <van-cell-group inset>
      <van-cell>
        <text slot="title" style="font-size: 40rpx;">出库</text>
        <van-icon slot="right-icon" name="plus" class="custom-icon" bindtap="chuku_add" />
      </van-cell>

      <van-cell is-link title="{{chuku_item.riqi}}" use-label-slot wx:for="{{chuku_list}}" wx:for-item="chuku_item" wx:key="{{chuku_item}}">
        <text style="color: black;">{{chuku_item.jiashui_xiaoji}}</text>
      </van-cell>
    </van-cell-group>
  </view>

  <view style="padding-top: 10px;" >
    <van-cell-group inset data-index="{{i}}">
      <van-cell>
        <text slot="title" style="font-size: 40rpx;">收款</text>
        <van-icon slot="right-icon" name="plus" class="custom-icon" bindtap="shoukuan_add" />
      </van-cell>

      <van-cell is-link title="{{shoukuan_item.shouzhi_riqi}}" use-label-slot wx:for="{{shoukuan_list}}" wx:for-item="shoukuan_item" wx:key="{{shoukuan_item}}">
        <text style="color: black;">{{shoukuan_item.money}}</text>
      </van-cell>
    </van-cell-group>
  </view>

  <view style="padding-top: 10px;" >
    <van-cell-group inset data-index="{{i}}">
      <van-cell>
        <text slot="title" style="font-size: 40rpx;">开票</text>
        <van-icon slot="right-icon" name="plus" class="custom-icon" bindtap="kaipiao_add" />
      </van-cell>

      <van-cell is-link title="{{kaipiao_item.kaipiao_riqi}}" use-label-slot wx:for="{{kaipiao_list}}" wx:for-item="kaipiao_item" wx:key="{{kaipiao_item}}">
        <text style="color: black;">{{kaipiao_item.jiashui_heji}}</text>
      </van-cell>
    </van-cell-group>
  </view>

  <view style="padding-top: 10px;padding-bottom: 50px;" >
    <van-cell-group inset data-index="{{i}}">
      <van-cell>
        <text slot="title" style="font-size: 40rpx;">采购订单</text>
        <van-icon slot="right-icon" name="plus" class="custom-icon" />
      </van-cell>

      <van-cell is-link title="{{caigou_item.riqi}}" use-label-slot wx:for="{{caigou_list}}" wx:for-item="caigou_item" wx:key="{{caigou_item}}">
        <text style="color: black;">{{caigou_item.jiashui_xiaoji}}</text>
      </van-cell>
    </van-cell-group>
  </view>
</scroll-view>

<view class="bottom_view">
  <view class="bt_text">合计：{{num}}个</view>
  <button class="bt_bottom" data-column="gongneng" bindtap="xiala_show">功能</button>
</view>
